      <row>
        <entry>Data21</entry>
        <entry>Data22</entry>
        <entry>Data23</entry>
        <entry>Data24</entry>
        <entry morerows="1" valign="middle">
           Vertical Span
        </entry>
      </row>
      <row>
        <entry>Data31</entry>
        <entry spanname="span-horiz-vert" morerows="1" valign="bottom">
